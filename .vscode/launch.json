    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug Test in Current File",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/feed_forward/image_classification/",
            "args": ["${file}"]
        },
        {
            "name": "Image Classifiaction - n-layer",
            "type": "python",
            "request": "launch",
            "module": "image_classification",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/feed_forward/image_classification/",
            "args": [
                "-c",
                "n_layer.yaml"    
            ]
        },
        {
            "name": "Image Classifiaction - 2-layer",
            "type": "python",
            "request": "launch",
            "module": "image_classification",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/feed_forward/image_classification/",
            "args": [
                "-c",
                "two_layer.yaml"    
            ]
        },
    ]
}